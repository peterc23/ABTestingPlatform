doctype 5
html(lang="en")
    head
        include components/header
    body
        form.form-horizontal(action="login", method="post")
            fieldset
                legend Experiment Testing Login
                div.control-group
                    label.control-label(for="inputUserName") UserName
                    div.controls
                        input#inputUserName(type="text", name="username", placeholder="UserName")
                div.control-group
                    label.control-label(for="inputPassword") Password
                    div.controls
                        input#inputPassword(type="password", name="password", placeholder="Password")
                div.control-group
                    div.controls
                        label.checkbox
                            input(type="checkbox")
                            | Remember me
                        button.btn(type="submit") Login

